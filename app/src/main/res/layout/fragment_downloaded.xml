<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.user_activity.downloaded.DownloadedMediaFragment">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/downloadedMediaRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:isScrollContainer="false"
                    android:layoutAnimation="@anim/layout_animation_fall_down"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="5"
                    tools:layoutAnimation="@null"
                    tools:listitem="@layout/item_media" />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/currentDownloadingRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:isScrollContainer="false"
                    android:layoutAnimation="@anim/layout_animation_fall_down"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="5"
                    tools:layoutAnimation="@null"
                    tools:listitem="@layout/item_media" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/layout_connection" />

    <include layout="@layout/layout_empty_data_text" />

</FrameLayout>